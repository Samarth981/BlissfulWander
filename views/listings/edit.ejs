<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Edit listing</h3>
    <br />
    <form
      method="POST"
      action="/listings/<%= listing._id %>?_method=put"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          name="listing[title]"
          value="<%= listing.title %>"
          class="form-control"
          required
        />
        <div class="valid-feedback">Title is good!</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Descriptio</label>
        <textarea
          name="listing[description]"
          class="form-control"
          id="description"
          required
        >
    <%= listing.description %></textarea
        >
        <div class="invalid-feedback">Description should be Invalid</div>
      </div>
      <br />

      <div class="mb-3">
        <label for="image" class="form-label">Enter image URL/Link</label>
        <input
          type="text"
          name="listing[image][url]"
          class="form-control"
          placeholder="URL"
          value="<%= listing.image.url %>"
          required
        />
        <div class="invalid-feedback">URL should be Invalid</div>
      </div>
      <br />

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            type="number"
            name="listing[price]"
            class="form-control"
            placeholder="Price"
            value="<%= listing.price %>"
            required
          />
          <div class="invalid-feedback">price should be Invalid</div>
        </div>

        <br />

        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input
            type="text"
            name="listing[country]"
            class="form-control"
            placeholder="Country"
            value="<%= listing.country %>"
            required
          />
          <div class="invalid-feedback">country name should be Invalid</div>
        </div>
      </div>
      <br />

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          type="text"
          name="listing[location]"
          class="form-control"
          placeholder="location"
          value="<%= listing.location %>"
          required
        />
        <div class="invalid-feedback">location should be Invalid</div>
      </div>
      <br />
      <button type="submit" class="btn btn-dark add-btn mt-1 mb-2">Add</button>
    </form>
  </div>
</div>
<script src="/js/Script.js"></script>
